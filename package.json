    "node": ">=7",
    "yarn": ">=1.2.1"
  },
  "devDependencies": {
    "eslint-config-accurapp": "./packages/eslint-config-accurapp",
    "lerna": "^2.9.0"
  },
  "resolutions": {
    "**/file-loader": "1.1.9",
    "**/webpack": "4.0.0",
    "**/webpack-dev-server": "3.0.0"
  }
}
